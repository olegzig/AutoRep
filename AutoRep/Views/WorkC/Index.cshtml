@model IEnumerable<AutoRep.Models.Work>

@{
    ViewData["Title"] = "Index";
}

<h1>Заказы</h1>

<p>
    <a asp-action="Create">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a class="d-table-cell" asp-route-sortOrder="@ViewBag.ClientSort">Клиент</a>
            </th>
            <th>
                <a class="d-table-cell" asp-route-sortOrder="@ViewBag.DateSort">Дата</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Work item in Model)
        {
            <tr>
                <td>
                    @item.Client
                </td>
                <td>
                    @item.Date
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Подробнее</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>