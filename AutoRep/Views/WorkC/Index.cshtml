@model IEnumerable<AutoRep.Models.Work>

@{
    ViewData["Title"] = "Index";
}

<h1>Заказы</h1>

<p>
    <a asp-action="Create">Добавить</a>
</p>
@using (Html.BeginForm())
{
    <div class="row container mb-1 justify-content-around">
        <input class="form-control col-11" type="search" name="SearchString" placeholder="Введите строку для поиска" value="@ViewBag.SearchString" />
        <input class="btn btn-info col-1 align-self-end"type="submit" value="Search" />
    </div>
}

<table class="table table-dark" style="background-color: gray">
    <thead class="thead-dark">
        <tr>
            <th>
                <a class="d-table-cell" asp-route-sortOrder="@ViewBag.ClientSort">Клиент</a>
            </th>
            <th>
                <a class="d-table-cell" asp-route-sortOrder="@ViewBag.DateSort">Дата</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Work item in Model)
        {
            <tr>
                <td>
                    @item.Client
                </td>
                <td>
                    @item.Date
                </td>
                <td class="table-menu text-center">
                    <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Подробнее</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>