@model X.PagedList.IPagedList<AutoRep.Models.Work>

@{
    ViewData["Title"] = "Index";
}
@using X.PagedList.Web.Common;
@using X.PagedList.Mvc.Core;
<h1>Заказы</h1>

<p>
    <a asp-action="Create">Добавить</a>
</p>

<div class="form-check form-check-inline">
    <input class="form-check-input" type="checkbox">
    <label class="form-check-label" for="inlineCheckbox1">Отображать все заказы</label>
</div>
<div class="form-check form-check-inline">
    <input class="form-check-input" type="checkbox">
    <label class="form-check-label" for="inlineCheckbox1">Отображать законченные заказы</label>
</div>

@using (Html.BeginForm())
{
    <div class="form-inline my-1 px-0">
        <input class="form-control flex-fill mr-1" type="search" name="SearchString" placeholder="Введите строку для поиска" value="@ViewBag.CurrentFilter" />
        <input class="btn btn-info d-inline-flex" type="submit" value="Search" />
    </div>
}

<table class="table table-dark">
    <thead class="thead-dark">
        <tr>
            <th>
                <a class="d-table-cell" asp-route-sortOrder="@ViewBag.ClientSort" asp-route-page="@Model.PageNumber" asp-route-currentFilter="@ViewBag.CurrentFilter">Клиент</a>
            </th>
            <th>
                <a class="d-table-cell" asp-route-sortOrder="@ViewBag.DateSort" asp-route-page="@Model.PageNumber" asp-route-currentFilter="@ViewBag.CurrentFilter">Дата</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Work item in Model)
        {
            <tr>
                <td>
                    @item.Client
                </td>
                <td>
                    @item.Date
                </td>
                <td class="table-menu text-center">
                    <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Подробнее</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }), new PagedListRenderOptions
{
    DisplayLinkToIndividualPages = true,
    DisplayPageCountAndCurrentLocation = false,
    LiElementClasses = new string[] { "page-item" },
    PageClasses = new string[] { "page-link" },
})